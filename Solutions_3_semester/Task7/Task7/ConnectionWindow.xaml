<Window x:Class="Task7.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task7"
        mc:Ignorable="d"
        Title="ConnectionWindow" Height="130" Width="400" MinWidth="260" MinHeight="80">
	<Grid x:Name="MainGrid">
		<TextBox x:Name="IpAdressTextBox" HorizontalAlignment="Center" Height="19" TextWrapping="Wrap" Text="ip adress" VerticalAlignment="Center" Width="129" Margin="90,10,25,7.8" GotFocus="IpAdressTextBoxGetFocus" LostFocus="IpAdressTextBoxLostFocus" KeyDown="IpAdressTextBoxKeyPressed"/>
		<Button x:Name="ConnectButton" Content="connect" VerticalAlignment="Center" Margin="10,10,159,7.8" Height="19" HorizontalAlignment="Center" Width="75" Click="ConnectButtonClick"/>
	</Grid>
</Window>
